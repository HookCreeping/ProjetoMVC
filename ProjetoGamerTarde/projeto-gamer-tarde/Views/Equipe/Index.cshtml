@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<link rel="stylesheet" href="/css/equipes.css">

<main>

    <section class="container-grid cadastro-equipes">
        
        @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
        }
        else
        {
            <form class="frm-cad-equipe" method='post' action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Equipes</h1>
                    <hr>
                </div>

                <input name="Nome" class="campo-entrada" type="text" placeholder="Digite o nome da sua equipe:">

                <label class="foto" for="foto-file">
                    <input name="Imagem" type="file" id="foto-file">
                </label>

                <button type="submit">Cadastro</button>
            </form>


            <table class="table table-striped table-responsive">
                <thead>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Imagem</th>
                    <th>Ações</th>
                </thead>

                <tbody>

                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <tr>
                            <td>@equipe.IdEquipe</td>
                            <td>@equipe.Nome</td>
                            <td>
                                <img src="~/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px">
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><img
                                        class="yellow-trash" src="~/assets/trash.png" alt=""></a>
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe">
                                    <img src="~/assets/lapis-icon.png.png" alt="" width="25px">
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        }
    </section>
</main>
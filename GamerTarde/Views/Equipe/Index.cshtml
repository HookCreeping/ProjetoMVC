@model Equipe

@{
    ViewData["Title"] = "Equipe";
}

<form method='post' action='@Url.Action("Cadastrar")' enctype="multipart/form-data">

    <input type="text" name="Nome" required>
    <input type="file" name="Imagem">

    <label for="">Imagem</label>
    <button type="submit">Cadastrar</button>

</form>

<h1>Tela de Equipes</h1>

<table class="table table-striped table-responsive">
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Imagem</th>
        <th>Ação</th>
    </thead>
    <tbody>




        @foreach (Equipe equipe in ViewBag.Equipe)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td>
                    <img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="50px">
                </td>
                <td>
                    <a asp-area="Excluir item" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe">Excluir</a>
                </td>
                <td>
                    <a asp-area="Editar item" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>